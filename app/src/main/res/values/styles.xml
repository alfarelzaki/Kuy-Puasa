<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullscreenTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="RobotoCalendarMonthText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#4F4F4F</item>
        <item name="fontPath">fonts/Cabin-Regular.ttf</item>
    </style>

    <style name="RobotoCalendarMonthArrow">
        <item name="android:tint">#4F4F4F</item>
    </style>

    <style name="RobotoCalendarDayOfTheWeekText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#4F4F4F</item>
        <item name="fontPath">fonts/Cabin-Regular.ttf</item>
    </style>

    <style name="RobotoCalendarDayOfTheMonthText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#4F4F4F</item>
        <item name="fontPath">fonts/Cabin-Bold.ttf</item>
    </style>

</resources>
