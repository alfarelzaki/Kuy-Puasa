<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popup_puasa_background"
    tools:context=".PopUpPuasaSunnah">

    <LinearLayout
        android:id="@+id/background_title_sunnah"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/puasaArafah"
        android:orientation="vertical">

        <TextView
            android:id="@+id/puasa_sunnah_title"
            android:layout_marginTop="120dp"
            android:layout_below="@id/background_title_sunnah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Puasa Sunnah"
            android:textSize="32sp"
            android:textColor="@android:color/black"
            android:padding="16dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/puasa_sunnah_description"
        android:textSize="16sp"
        android:layout_below="@id/background_title_sunnah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:text="Puasa yang jika dilakukan mendapat pahala, jika ditinggalkan tidak mendapat dosa"
        android:padding="16dp"/>



</RelativeLayout>