<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PuasaAsyuraTasuaDeskripsi"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/click_calender_atas"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/asyura"
        android:orientation="vertical">

        <TextView
            android:id="@+id/asyuratasua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:gravity="center"
            android:text="Puasa Asyura Tasua"
            android:textSize="12pt"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/deskripsi1"
        android:layout_below="@id/click_calender_atas"
        app:cardCornerRadius="12dp"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pada bulan Muharram, umat Islam disunnahkan untuk berpuasa ketika hari-hari tertentu. Salah satunya adalah puasa Asyura pada setiap tanggal 10 bulan Muharram.\n\nHari Asyura atau tanggal 10 Muharram. Sehari sebelumnya, umat Islam juga dianjurkan menjalankan puasa Tasu`a.
" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="170dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/deskripsi2"
        android:layout_below="@id/deskripsi1"
        app:cardCornerRadius="12dp"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Niat Puasa:"
                    android:textStyle="bold"
                    android:textSize="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\nNawaitus Shouma Fi Yaumi Asyura Sunnatan Lillahi Ta’ala \n\nArtinya, &quot; Saya niat puasa Asyura sunat karena Allalh Ta’ala.&quot;" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>